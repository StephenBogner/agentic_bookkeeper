# Agentic Bookkeeper - Sample Environment Configuration
# Copy this file to the project root and rename to .env
# Fill in your actual API keys and configuration values

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# You only need to configure ONE provider to get started
# Supported providers: openai, anthropic, xai, google

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
# Recommended model: gpt-4o-mini (fast, cost-effective)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration
# Get your API key from: https://console.anthropic.com/
# Recommended model: claude-3-haiku-20240307 (fast, cost-effective)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# XAI (x.AI) Configuration
# Get your API key from: https://x.ai/
# Recommended model: grok-beta (fast, competitive pricing)
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-beta

# Google Gemini Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
# Recommended model: gemini-1.5-flash (fast, free tier available)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-flash

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Default LLM provider to use (openai, anthropic, xai, or google)
DEFAULT_LLM_PROVIDER=openai

# Tax jurisdiction for reports (CRA for Canada, IRS for United States)
TAX_JURISDICTION=CRA

# Currency for reports (USD or CAD)
CURRENCY=CAD

# Watch folder for automatic document processing
# Documents placed in this folder will be automatically processed
WATCH_FOLDER=./watch_folder

# Database file location
DATABASE_PATH=./bookkeeper.db

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=./bookkeeper.log

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Machine ID for encryption (leave blank to auto-generate from system UUID)
# Only set this if you need to transfer encrypted data between machines
MACHINE_ID=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# LLM request timeout in seconds
LLM_TIMEOUT=30

# Maximum retries for failed LLM requests
LLM_MAX_RETRIES=3

# Enable debug mode (more verbose logging)
DEBUG=False

# =============================================================================
# NOTES
# =============================================================================
#
# Cost Comparison (as of 2025-10):
# - OpenAI GPT-4o-mini: ~$0.15 per 1M input tokens, ~$0.60 per 1M output tokens
# - Anthropic Claude Haiku: ~$0.25 per 1M input tokens, ~$1.25 per 1M output tokens
# - XAI Grok-beta: ~$5 per 1M input tokens, ~$15 per 1M output tokens
# - Google Gemini Flash: Free tier available, ~$0.075 per 1M tokens after
#
# Typical document processing uses 1,000-2,000 tokens per document.
#
# For more information, see the User Guide: docs/USER_GUIDE.md
